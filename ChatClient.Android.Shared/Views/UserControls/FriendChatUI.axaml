<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:customSelectableTextBlock="clr-namespace:ChatClient.Avalonia.Controls.CustomSelectableTextBlock;assembly=ChatClient.Avalonia"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:chatUiConverter="clr-namespace:ChatClient.Avalonia.Converter.ChatUIConverter;assembly=ChatClient.Avalonia"
             xmlns:chat="clr-namespace:ChatClient.Avalonia.Controls.Chat;assembly=ChatClient.Avalonia"
             xmlns:chatMessage="clr-namespace:ChatClient.Tool.Data.ChatMessage;assembly=ChatClient.Tool"
             xmlns:circleImage="clr-namespace:ChatClient.Avalonia.Controls.CircleImage;assembly=ChatClient.Avalonia"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:userControls="clr-namespace:ChatClient.Android.Shared.Views.UserControls"
             xmlns:qScrollViewer="clr-namespace:ChatClient.Avalonia.Controls.QScrollViewer;assembly=ChatClient.Avalonia"
             xmlns:viewModels="clr-namespace:ChatClient.Android.Shared.ViewModels"
             xmlns:mobileScrollViewer="clr-namespace:ChatClient.Avalonia.Controls.MobileScrollViewer;assembly=ChatClient.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:FriendChatViewModel"
             x:Class="ChatClient.Android.Shared.Views.UserControls.FriendChatUI">
    <UserControl.Styles>
        <Style
            Selector="TextBlock,SelectableTextBlock,customSelectableTextBlock|CustomSelectableTextBlock,avalonia|MaterialIcon">
            <Setter Property="TextElement.Foreground" Value="{DynamicResource TextBlockDefaultForeground}" />
            <Setter Property="Control.Opacity" Value="1" />
            <Setter Property="TextElement.FontSize" Value="13.5" />
        </Style>
    </UserControl.Styles>
    <UserControl.Resources>
        <chatUiConverter:ChatUIDateTimeConverter x:Key="DateTimeConverter" />
        <chat:MessageDataTemplate x:Key="MessageDataTemplate">
            <DataTemplate x:Key="Retracted" DataType="chatMessage:ChatData">
                <!-- 撤回消息 -->
                <Panel />
            </DataTemplate>
            <DataTemplate x:Key="User" DataType="chatMessage:ChatData">
                <!-- Right -->
                <Grid Margin="20,7,0,7"
                      RenderTransformOrigin="100%,100%"
                      Classes="FadeIn">
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Head -->
                        <circleImage:CircleImage Grid.Column="1"
                                                 Margin="8,0,12,0"
                                                 VerticalAlignment="Top"
                                                 DockPanel.Dock="Right"
                                                 Classes="Head"
                                                 Image="{Binding ((viewModels:FriendChatViewModel)DataContext).UserDto.HeadImage ,
                                                    RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=userControls:FriendChatUI}}"
                                                 Size="35" />
                        <Grid Grid.Column="0"
                              ColumnDefinitions="Auto,*"
                              HorizontalAlignment="Right">
                            <Grid VerticalAlignment="Bottom" Width="20"
                                  Height="20"
                                  Margin="5">
                                <u:Loading IsVisible="{Binding IsWriting}">
                                    <u:Loading.RenderTransform>
                                        <ScaleTransform ScaleX="0.55"
                                                        ScaleY="0.55" />
                                    </u:Loading.RenderTransform>
                                </u:Loading>
                                <avalonia:MaterialIcon Kind="AlertCircle"
                                                       IsVisible="{Binding IsError}"
                                                       Width="20"
                                                       Height="20"
                                                       Background="Transparent"
                                                       Opacity="0.7"
                                                       ToolTip.ShowDelay="500"
                                                       Foreground="Red">
                                    <ToolTip.Tip>
                                        <TextBlock Text="消息发送失败" Foreground="Red" FontSize="12" Opacity="0.7" />
                                    </ToolTip.Tip>
                                </avalonia:MaterialIcon>
                            </Grid>
                            <Border Grid.Column="1" Classes="Owner"
                                    CornerRadius="10"
                                    MaxWidth="450"
                                    Background="{DynamicResource SemiColorPrimary}"
                                    Padding="5">
                                <Border.Styles>
                                    <Style
                                        Selector="Border.Owner /template/ Border#PART_BorderCard">
                                        <Setter Property="Opacity" Value="0.7" />
                                        <Setter Property="Background"
                                                Value="{DynamicResource SemiColorPrimary}" />
                                    </Style>
                                    <Style
                                        Selector="Border.Owner:pointerover /template/ Border#PART_BorderCard">
                                        <Setter Property="Opacity" Value="0.6" />
                                        <Setter Property="Background"
                                                Value="{DynamicResource SemiColorPrimary}" />
                                    </Style>
                                </Border.Styles>
                                <ItemsControl
                                    ItemsSource="{Binding ChatMessages}"
                                    HorizontalAlignment="Center"
                                    Padding="0"
                                    Margin="0">
                                    <ItemsControl.Styles>
                                        <Style
                                            Selector="TextBlock,SelectableTextBlock,customSelectableTextBlock|CustomSelectableTextBlock,avalonia|MaterialIcon">
                                            <Setter Property="TextElement.Foreground" Value="#E9E9E9" />
                                            <Setter Property="Control.Opacity" Value="1" />
                                            <Setter Property="TextElement.FontSize" Value="13.5" />
                                        </Style>
                                    </ItemsControl.Styles>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"
                                                        Spacing="5" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <userControls:ChatMessageView
                                                IsLeft="False"
                                                CallMessageCommand="{Binding $parent[userControls:FriendChatUI].ReCallCommand}"
                                                HorizontalAlignment="Right"
                                                Message="{Binding Content}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="Friend" DataType="chatMessage:ChatData">
                <!-- Left -->
                <Grid Margin="0,7,20,7"
                      RenderTransformOrigin="0%,100%">
                    <Grid ColumnDefinitions="Auto,*">
                        <!-- Head -->
                        <circleImage:CircleImage Grid.Column="0"
                                                 VerticalAlignment="Top"
                                                 Classes="Head"
                                                 Margin="12,0,8,0"
                                                 Image="{Binding ((viewModels:FriendChatViewModel)DataContext).FriendChatDto.FriendRelatoinDto.UserDto.HeadImage ,
                                                    RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=userControls:FriendChatUI}}"
                                                 Size="35" />
                        <Border Grid.Column="1" Classes="Friend"
                                CornerRadius="10"
                                Background="{DynamicResource SemiGrey1}"
                                MaxWidth="450"
                                HorizontalAlignment="Left"
                                Padding="5">
                            <Border.Styles>
                                <Style
                                    Selector="userControls|FriendChatUI.Friend /template/ Border#PART_BorderCard">
                                    <Setter Property="Opacity" Value="0.7" />
                                    <Setter Property="Background"
                                            Value="{DynamicResource SemiGrey1}" />
                                </Style>
                                <Style
                                    Selector="userControls|FriendChatUI.Friend:pointerover /template/ Border#PART_BorderCard">
                                    <Setter Property="Opacity" Value="1" />
                                    <Setter Property="Background"
                                            Value="{DynamicResource SemiGrey1}" />
                                </Style>
                            </Border.Styles>
                            <ItemsControl
                                ItemsSource="{Binding ChatMessages}"
                                Padding="0"
                                HorizontalAlignment="Center"
                                Margin="0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"
                                                    Spacing="5" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <userControls:ChatMessageView
                                            IsLeft="True"
                                            CallMessageCommand="{Binding $parent[userControls:FriendChatUI].ReCallCommand}"
                                            HorizontalAlignment="Left"
                                            Message="{Binding Content}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </Grid>
                </Grid>
            </DataTemplate>
        </chat:MessageDataTemplate>
    </UserControl.Resources>
    <Grid>
        <!-- 消息列表 -->
        <mobileScrollViewer:MobileScrollViewer
            x:Name="ChatScroll"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel Orientation="Vertical" Background="Transparent">
                <Button IsVisible="{Binding FriendChatDto.HasMoreMessage}"
                        Cursor="Hand"
                        Click="MoreButton_OnClick">
                    <TextBlock Text="查看更多历史记录" FontSize="12" LetterSpacing="1"
                               Foreground="{DynamicResource SemiColorPrimary}" />
                </Button>
                <ItemsControl x:Name="IC"
                              ItemsSource="{Binding FriendChatDto.ChatMessages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Spacing="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.DataTemplates>
                        <DataTemplate DataType="chatMessage:ChatData">
                            <Grid>
                                <StackPanel Orientation="Vertical">
                                    <!-- 时间条 -->
                                    <TextBlock
                                        Classes="FadeIn Small"
                                        Margin="5"
                                        Opacity="0.7"
                                        IsVisible="{Binding ShowTime}"
                                        FontSize="12"
                                        HorizontalAlignment="Center"
                                        Text="{Binding Time,Converter={StaticResource DateTimeConverter}}" />
                                    <Panel>
                                        <!-- 撤回消息 -->
                                        <Border IsVisible="{Binding IsRetracted}"
                                                Background="{DynamicResource SemiColorPrimaryLightActive}"
                                                Margin="0,5"
                                                HorizontalAlignment="Center" CornerRadius="5">
                                            <TextBlock FontSize="12" Margin="5,1.5" Opacity="0.75"
                                                       Classes="Small"
                                                       HorizontalAlignment="Center">
                                                <Run
                                                    Text="{Binding IsUser,Converter={chat:RetractedMessageConverter}}"
                                                    Foreground="{DynamicResource SukiPrimaryColor}" />
                                                <Run Text="撤回了一条消息"
                                                     Foreground="{DynamicResource SukiText}" />
                                            </TextBlock>
                                        </Border>
                                        <ContentControl
                                            IsVisible="{Binding IsRetracted,Converter={x:Static BoolConverters.Not}}"
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource MessageDataTemplate}" />
                                    </Panel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.DataTemplates>
                </ItemsControl>
            </StackPanel>
        </mobileScrollViewer:MobileScrollViewer>
        <!-- 新消息提示 -->
        <Button IsVisible="{Binding $parent[userControls:FriendChatUI].HaveUnReadMessage}"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0"
                Padding="0"
                Classes="Basic Visible"
                RenderTransformOrigin="0.5,1"
                Click="Button_OnClick">
            <Border Background="{DynamicResource SemiColorPrimaryLightActive}"
                    Margin="0"
                    Padding="8,4,4,4"
                    CornerRadius="7">
                <TextBlock
                    FontSize="12" Classes="Small"
                    Opacity="0.7"
                    Text="{Binding $parent[userControls:FriendChatUI].UnReadMessageCount,StringFormat='新增{0}条未读消息',Mode=OneWay}" />
            </Border>
        </Button>
    </Grid>
</UserControl>