<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:groupList="clr-namespace:ChatClient.Avalonia.Controls.GroupList"
        xmlns:circleImage="clr-namespace:ChatClient.Avalonia.Controls.CircleImage"
        xmlns:data="clr-namespace:ChatClient.Tool.Data;assembly=ChatClient.Tool"
        xmlns:converter="clr-namespace:ChatClient.Avalonia.Converter">
    <Style Selector="groupList|GroupList">
        <Setter Property="Template">
            <ControlTemplate>
                <Expander FontSize="14"
                          Theme="{StaticResource ChatExpander}"
                          FontWeight="SemiBold">
                    <Expander.Header>
                        <TextBlock FontSize="14" FontWeight="DemiBold" Text="{TemplateBinding Header}" />
                    </Expander.Header>
                    <ListBox Name="PART_ListBox"
                             SelectedItem="{Binding $parent[groupList:GroupList].SelectedItem,Mode=TwoWay}"
                             Classes="Void Chat">
                        <Interaction.Behaviors>
                            <EventTriggerBehavior EventName="SelectionChanged">
                                <InvokeCommandAction Command="{TemplateBinding SelectionChangedCommand}"
                                                     CommandParameter="{Binding $parent[ListBox].SelectedItem.DataContext}" />
                            </EventTriggerBehavior>
                        </Interaction.Behaviors>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="data:FriendRelationDto">
                                <Grid Height="46" ClipToBounds="False">
                                    <Grid ColumnDefinitions="42,*" Margin="6,3">
                                        <Grid Width="42" Height="42">
                                            <circleImage:CircleImage Size="42"
                                                                     Image="{Binding UserDto.HeadImage}" />
                                        </Grid>
                                        <Grid Grid.Column="1" RowDefinitions="1.2*,1*" Margin="10,0,0,0">
                                            <Grid>
                                                <TextBlock
                                                    IsVisible="{Binding Remark,Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    Opacity="0.9"
                                                    FontWeight="DemiBold"
                                                    TextTrimming="CharacterEllipsis"
                                                    Foreground="{DynamicResource SukiText}">
                                                    <Run Text="{Binding Remark}" />
                                                    <Run Text=" (" />
                                                    <Run Text="{Binding UserDto.Name}" />
                                                    <Run Text=")" />
                                                </TextBlock>
                                                <TextBlock
                                                    IsVisible="{Binding Remark,Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    Opacity="0.9"
                                                    TextTrimming="CharacterEllipsis"
                                                    FontWeight="DemiBold"
                                                    Text="{Binding UserDto.Name}"
                                                    Foreground="{DynamicResource SukiText}" />
                                            </Grid>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                        Margin="0,3,15,0"
                                                        Grid.Row="1">
                                                <TextBlock Text="[" Opacity="0.6"
                                                           Foreground="{DynamicResource SukiText}" FontSize="11.5"
                                                           Margin="0"
                                                           FontWeight="Normal"
                                                           Padding="0" />
                                                <Ellipse IsVisible="{Binding UserDto.IsOnline}"
                                                         Fill="LimeGreen"
                                                         Width="10"
                                                         Height="10"
                                                         VerticalAlignment="Center"
                                                         Margin="2,3,2,0" />
                                                <Ellipse IsVisible="{Binding !UserDto.IsOnline}"
                                                         Fill="Red"
                                                         Width="10"
                                                         Height="10"
                                                         VerticalAlignment="Center"
                                                         Margin="2,3,2,0" />
                                                <TextBlock
                                                    Text="{Binding UserDto.IsOnline,Converter={converter:OnlineConverter}}"
                                                    Opacity="0.6"
                                                    Foreground="{DynamicResource SukiText}"
                                                    FontSize="11.5"
                                                    FontWeight="Normal"
                                                    Margin="0"
                                                    Padding="0" />
                                                <TextBlock Text="]" Opacity="0.6" FontSize="11.5" Margin="0"
                                                           Foreground="{DynamicResource SukiText}"
                                                           FontWeight="Normal"
                                                           Padding="0" />
                                                <TextBlock FontSize="11.5" Opacity="0.6" Margin="0,0,15,0"
                                                           Text="{Binding UserDto.Introduction}"
                                                           FontWeight="Normal"
                                                           Foreground="{DynamicResource SukiText}"
                                                           TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>