<Application
    x:Class="ChatClient.Desktop.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:controls="https://github.com/kikipoulet/SukiUI"
    xmlns:suki="clr-namespace:SukiUI;assembly=SukiUI"
    xmlns:semi="https://irihi.tech/semi"
    xmlns:customSelectableTextBlock="clr-namespace:ChatClient.Avalonia.Controls.CustomSelectableTextBlock;assembly=ChatClient.Avalonia"
    RequestedThemeVariant="Default">
    <Application.Resources>
        <FontFamily x:Key="MiSans">avares://ChatClient.Desktop/Assets/MiSans-Normal.ttf#MiSans</FontFamily>
    </Application.Resources>
    <Application.Styles>
        <suki:SukiTheme />
        <avalonia:MaterialIconStyles />
        <StyleInclude Source="avares://ChatClient.Avalonia/Theme/NotificationStyles.axaml" />
        <StyleInclude Source="avares://ChatClient.Avalonia/Theme/Index.axaml" />

        <Style Selector="TextBlock,SelectableTextBlock,TextBox,customSelectableTextBlock|CustomSelectableTextBlock">
            <Setter Property="TextElement.FontFamily" Value="{StaticResource MiSans}" />
            <Setter Property="TextElement.FontWeight" Value="SemiBold" />
        </Style>
    </Application.Styles>
</Application>