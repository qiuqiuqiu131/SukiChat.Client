<UserControl
    x:Class="ChatClient.Desktop.Views.Login.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p1="https://github.com/kikipoulet/SukiUI"
    xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:theme="clr-namespace:SukiUI.Theme;assembly=SukiUI"
    xmlns:vm="using:ChatClient.Desktop.ViewModels.Login"
    d:DesignHeight="420"
    d:DesignWidth="330"
    x:DataType="vm:LoginViewModel"
    mc:Ignorable="d">
    <Grid>
        <suki:BusyArea IsBusy="{Binding IsBusy}" BusyText="登录中...">
            <StackPanel
                Width="250"
                HorizontalAlignment="Center"
                Orientation="Vertical"
                Spacing="5">
                <avalonia:MaterialIcon
                    Width="40"
                    Height="40"
                    Margin="0,10,0,15"
                    HorizontalAlignment="Center"
                    Foreground="{DynamicResource SukiPrimaryColor}"
                    Kind="ChartDonutVariant" />
                <TextBlock
                    FontWeight="SemiBold"
                    Margin="8,0,0,3"
                    Foreground="{DynamicResource SukiLowText}"
                    Text="账号" />
                <TextBox
                    MaxLength="10"
                    LetterSpacing="1.5"
                    FontSize="13.5"
                    Text="{Binding Id}"
                    Watermark="ID" />
                <TextBlock
                    FontWeight="SemiBold"
                    Margin="8,5,0,3"
                    Foreground="{DynamicResource SukiLowText}"
                    Text="密码" />
                <TextBox
                    MaxLength="16"
                    PasswordChar="*"
                    FontSize="13.5"
                    LetterSpacing="1"
                    Text="{Binding Password}"
                    Watermark="Password" />
                <CheckBox Margin="5,5,5,0" IsChecked="{Binding LoginData.RememberPassword}">
                    <TextBlock
                        FontSize="12"
                        FontWeight="DemiBold"
                        Foreground="{DynamicResource SukiLowText}">
                        记住密码
                    </TextBlock>
                </CheckBox>
                <Button
                    Width="190"
                    Margin="0,25,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Classes="Flat Rounded"
                    Command="{Binding LoginCommand}"
                    Content="登录" />
            </StackPanel>
        </suki:BusyArea>
        <StackPanel
            Margin="0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <HyperlinkButton
                Command="{Binding ToRegisterViewCommand}"
                Content="注册账号"
                FontSize="12.5" />
            <TextBlock Margin="10" Text="|" />
            <HyperlinkButton
                Command="{Binding ToForgetViewCommand}"
                Content="忘记密码"
                FontSize="12.5" />
        </StackPanel>
    </Grid>
</UserControl>