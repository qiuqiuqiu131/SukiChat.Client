<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:contactViews="clr-namespace:ChatClient.Desktop.ViewModels.ChatPages.ContactViews"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:group="clr-namespace:ChatClient.Tool.Data.Group;assembly=ChatClient.Tool"
             xmlns:circleImage="clr-namespace:ChatClient.Avalonia.Controls.CircleImage;assembly=ChatClient.Avalonia"
             xmlns:contactViews1="clr-namespace:ChatClient.Desktop.Views.ChatPages.ContactViews"
             xmlns:converter="clr-namespace:ChatClient.Avalonia.Converter;assembly=ChatClient.Avalonia"
             xmlns:extenstions="clr-namespace:ChatClient.Avalonia.Extenstions;assembly=ChatClient.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="contactViews:GroupRequestViewModel"
             x:Class="ChatClient.Desktop.Views.ChatPages.ContactViews.GroupRequestView">
    <UserControl.Styles>
        <Style Selector="ScrollBar[AllowAutoHide=True] Border#ThumbBarVertical">
            <Setter Property="Background" Value="{DynamicResource SukiControlBorderBrush}"></Setter>
            <Setter Property="Width" Value="5"></Setter>
        </Style>
    </UserControl.Styles>
    <UserControl.DataTemplates>
        <DataTemplate DataType="group:GroupRequestDto">
            <suki:GlassCard
                BorderBrush="{DynamicResource SukiPrimaryColor50}"
                BorderThickness="0.5"
                Height="65"
                Margin="25,0,10,0"
                Padding="25,0"
                CornerRadius="5">
                <DockPanel LastChildFill="True">
                    <Grid DockPanel.Dock="Right">
                        <Grid IsVisible="{Binding IsSolved}" VerticalAlignment="Center">
                            <TextBlock Text="已同意" FontSize="12" Opacity="0.65" IsVisible="{Binding IsAccept}" />
                            <TextBlock Text="已拒绝" FontSize="12" Opacity="0.65" IsVisible="{Binding !IsAccept}" />
                        </Grid>
                        <TextBlock Text="等待验证" FontSize="12" Opacity="0.65"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding !IsSolved}" />
                    </Grid>
                    <StackPanel Margin="0,10" Orientation="Horizontal">
                        <circleImage:CircleImage Size="37" Image="{Binding GroupDto.HeadImage}" />
                        <Grid Margin="13,2" RowDefinitions="1.1*,*">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock
                                    FontSize="13.5"
                                    FontWeight="SemiBold"
                                    Text="{Binding GroupDto.Name}" />
                                <TextBlock Text="正在验证你的邀请"
                                           Foreground="{DynamicResource SukiText}"
                                           FontSize="13" />
                                <TextBlock Text="{Binding RequestTime,Converter={converter:DateOfYMDConverter}}"
                                           FontSize="13"
                                           Opacity="0.65" />
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock Text="留言：" FontSize="12" Opacity="0.65" />
                                <TextBlock
                                    FontSize="12" Opacity="0.65"
                                    Text="{Binding Message,Converter={converter:DefaultTextConverter DefaultText=已发送验证消息}}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </suki:GlassCard>
        </DataTemplate>
        <DataTemplate DataType="group:GroupReceivedDto">
            <suki:GlassCard
                BorderBrush="{DynamicResource SukiPrimaryColor50}"
                BorderThickness="0.5"
                Height="65"
                Margin="25,0,10,0"
                Padding="25,0"
                CornerRadius="5">
                <DockPanel LastChildFill="True">
                    <Grid DockPanel.Dock="Right">
                        <Grid IsVisible="{Binding IsSolved}" VerticalAlignment="Center">
                            <TextBlock Text="已同意" FontSize="12" Opacity="0.65" IsVisible="{Binding IsAccept}" />
                            <TextBlock Text="已拒绝" FontSize="12" Opacity="0.65" IsVisible="{Binding !IsAccept}" />
                        </Grid>
                        <StackPanel IsVisible="{Binding !IsSolved}"
                                    Margin="0,0,-10,0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center" Spacing="7">
                            <Button Classes="Outlined" Padding="8,4" Margin="0"
                                    CommandParameter="{Binding}"
                                    Opacity="0.9"
                                    Command="{Binding ((contactViews:GroupRequestViewModel)DataContext).AcceptCommand,
                                        RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ItemsControl}}">
                                <TextBlock Text="同意" FontSize="12" />
                            </Button>
                            <Button Classes="Outlined Accent" Padding="8,4" Margin="0"
                                    Opacity="0.9"
                                    CommandParameter="{Binding}"
                                    Command="{Binding ((contactViews:GroupRequestViewModel)DataContext).AcceptCommand,
                                        RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ItemsControl}}">
                                <TextBlock Text="拒绝" FontSize="13" />
                            </Button>
                        </StackPanel>
                    </Grid>
                    <StackPanel Margin="0,10" Orientation="Horizontal">
                        <circleImage:CircleImage Size="37" Image="{Binding UserDto.HeadImage}" />
                        <Grid Margin="13,2" RowDefinitions="1.1*,*">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock
                                    FontSize="13.5"
                                    FontWeight="SemiBold"
                                    Text="{Binding UserDto.Name}" />
                                <TextBlock Text="请求加入群聊"
                                           Foreground="{DynamicResource SukiText}"
                                           FontSize="13" />
                                <TextBlock Text="{Binding GroupDto.Name,StringFormat=({0}) }"
                                           FontWeight="SemiBold"
                                           FontSize="13.5" />
                                <TextBlock Text="{Binding ReceiveTime,Converter={converter:DateOfYMDConverter}}"
                                           FontSize="13"
                                           Opacity="0.65" />
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock Text="留言：" FontSize="12" Opacity="0.65" Margin="0" />
                                <TextBlock
                                    FontSize="12" Opacity="0.65"
                                    Text="{Binding Message,Converter={converter:DefaultTextConverter DefaultText=已发送验证消息}}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </suki:GlassCard>
        </DataTemplate>
    </UserControl.DataTemplates>
    <contactViews1:GroupRequestView.GroupRequestDtos>
        <Binding Path="GroupRequestDtos" />
    </contactViews1:GroupRequestView.GroupRequestDtos>
    <contactViews1:GroupRequestView.GroupReceivedDtos>
        <Binding Path="GroupReceivedDtos" />
    </contactViews1:GroupRequestView.GroupReceivedDtos>
    <Grid>
        <Grid RowDefinitions="85,*" IsVisible="{Binding !IsRequestEmpty}">
            <DockPanel Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="群聊通知" FontSize="16.5" VerticalAlignment="Bottom"
                           FontWeight="SemiBold"
                           DockPanel.Dock="Left"
                           Margin="10,10" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            DockPanel.Dock="Right"
                            Margin="5,10">
                    <StackPanel.Styles>
                        <Style Selector="Button.Basic">
                            <Setter Property="Padding" Value="5" />
                            <Style Selector="^ avalonia|MaterialIcon">
                                <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
                            </Style>
                            <Style Selector="^:pointerover">
                                <Setter Property="Background" Value="Transparent" />
                                <Style Selector="^ avalonia|MaterialIcon">
                                    <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}" />
                                </Style>
                            </Style>
                            <Style Selector="^:pressed /template/ Border">
                                <Setter Property="Background" Value="Transparent" />
                                <Style Selector="^ avalonia|MaterialIcon">
                                    <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}" />
                                </Style>
                            </Style>
                        </Style>
                    </StackPanel.Styles>
                    <Button Classes="Basic" Margin="0" Padding="0">
                        <avalonia:MaterialIcon Kind="GarbageCanOutline" Width="23" Height="23" />
                    </Button>
                </StackPanel>
            </DockPanel>
            <ScrollViewer Grid.Row="1"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="10,0"
                          IsVisible="{Binding !IsRequestEmpty}"
                          VerticalScrollBarVisibility="Visible">
                <ItemsControl Name="RequestItemsControl" extenstions:ItemsControlExtensions.AnimatedScroll="True">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Spacing="20" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <StackPanel Orientation="Vertical"
                    Opacity="0.7"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsVisible="{Binding IsRequestEmpty}">
            <avalonia:MaterialIcon Kind="BellRingOutline" Width="40" Height="40"
                                   Margin="20"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SukiText}" />
            <TextBlock
                FontSize="17"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Text="暂无通知" />
        </StackPanel>
    </Grid>
</UserControl>