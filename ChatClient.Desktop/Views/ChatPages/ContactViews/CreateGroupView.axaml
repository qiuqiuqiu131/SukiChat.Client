<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ChatClient.Desktop.ViewModels.ChatPages.ContactViews"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:multiSeparateGroupView="clr-namespace:ChatClient.Avalonia.Controls.MultiSeparateGroupView;assembly=ChatClient.Avalonia"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:converter="clr-namespace:ChatClient.Avalonia.Converter;assembly=ChatClient.Avalonia"
             xmlns:searchBox="clr-namespace:ChatClient.Avalonia.Controls.SearchBox;assembly=ChatClient.Avalonia"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="550" Height="480"
             x:DataType="vm:CreateGroupViewModel"
             x:Class="ChatClient.Desktop.Views.ChatPages.ContactViews.CreateGroupView">
    <Grid ColumnDefinitions="*,1.1*">
        <Grid Grid.Column="0" RowDefinitions="50,*">
            <suki:GlassCard Padding="8"
                            Margin="0"
                            Grid.Row="0"
                            CornerRadius="0">
                <searchBox:SearchBox HorizontalAlignment="Stretch"
                                     VerticalAlignment="Bottom" />
            </suki:GlassCard>
            <suki:GlassCard Padding="8" Margin="0" CornerRadius="0" Grid.Row="1">
                <Grid>
                    <TextBlock Text="还没有添加好友"
                               Margin="0,50"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Opacity="0.6"
                               FontWeight="SemiBold"
                               IsVisible="{Binding GroupFriends.Count ,Converter={converter:ListEmptyConverter}}">
                    </TextBlock>
                    <DockPanel LastChildFill="True"
                               IsVisible="{Binding !GroupFriends.Count,Converter={converter:ListEmptyConverter}}">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
                            <multiSeparateGroupView:MultiSeparateGroupView
                                Margin="5"
                                x:Name="MultiSeparateGroupView"
                                SelectionChangedCommand="{Binding SelectionChangedCommand}"
                                GroupFriends="{Binding GroupFriends}" />
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </suki:GlassCard>
        </Grid>
        <Grid Grid.Column="1">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Bottom"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15">
                    <Button Content="确定" Command="{Binding OKCommand}" />
                    <Button Content="取消" Command="{Binding CancleCommand}" />
                </StackPanel>
                <Grid RowDefinitions="Auto,*">
                    <Grid Grid.Row="0">
                        <DockPanel LastChildFill="True" Margin="10">
                            <TextBlock DockPanel.Dock="Right" FontSize="11"
                                       IsVisible="{Binding SelectedFriends.Count}"
                                       Opacity="0.75"
                                       Text="{Binding SelectedFriends.Count,StringFormat=已选择 {0} 个好友}" />
                            <TextBlock FontSize="13.5" FontWeight="DemiBold" Text="创建群聊" />
                        </DockPanel>
                    </Grid>
                    <ItemsControl Margin="0,5" Grid.Row="1" ItemsSource="{Binding SelectedFriends}">
                        <ItemsControl.Styles>
                            <Style Selector="Grid.Item Border#Back">
                                <Setter Property="Opacity" Value="0" />
                            </Style>
                            <Style Selector="Grid.Item avalonia|MaterialIcon#Icon">
                                <Setter Property="Opacity" Value="0.3" />
                            </Style>
                            <Style Selector="Grid.Item:pointerover Border#Back">
                                <Setter Property="Opacity" Value="0.6" />
                            </Style>
                            <Style Selector="Grid.Item avalonia|MaterialIcon#Icon">
                                <Setter Property="Opacity" Value="0.7" />
                            </Style>
                        </ItemsControl.Styles>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="44" Classes="Item" Background="Transparent"
                                      PointerPressed="InputElement_OnPointerPressed">
                                    <Border Name="Back" Background="{DynamicResource SukiGlassCardBackground}" />
                                    <DockPanel LastChildFill="True" Margin="5,0">
                                        <avalonia:MaterialIcon DockPanel.Dock="Right"
                                                               Name="Icon"
                                                               Margin="10,7"
                                                               Kind="CancelCircle"
                                                               Width="15"
                                                               Height="15" />
                                        <Grid Margin="15,7" ColumnDefinitions="36,*">
                                            <Grid Width="36" Height="36">
                                                <Panel Width="36" Height="36">
                                                    <Panel.Clip>
                                                        <EllipseGeometry
                                                            Center="18,18"
                                                            RadiusX="18"
                                                            RadiusY="18" />
                                                    </Panel.Clip>
                                                    <Image
                                                        Width="36"
                                                        Height="36"
                                                        Source="{Binding  UserDto.HeadImage}" />
                                                </Panel>
                                            </Grid>
                                            <TextBlock Grid.Column="1"
                                                       Margin="20,0"
                                                       VerticalAlignment="Center"
                                                       FontSize="13.5"
                                                       FontWeight="DemiBold"
                                                       Text="{Binding  UserDto.Name}" />
                                        </Grid>
                                    </DockPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>