    </ItemGroup>

    <ItemGroup>
        <Content Include="Assets\DefaultHead.ico">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="Notification.Avalonia">
            <HintPath>bin\Debug\net8.0\Notification.Avalonia.dll</HintPath>
        </Reference>
        <Reference Include="SukiUI">
            <HintPath>bin\Debug\net8.0\SukiUI.dll</HintPath>
        </Reference>
        <Reference Include="SukiUI.Dock">
            <HintPath>bin\Debug\net8.0\SukiUI.Dock.dll</HintPath>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <AvaloniaResource Update="Assets\ChartDonutVariant.ico">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </AvaloniaResource>
    </ItemGroup>

    <ItemGroup>
        <AdditionalFiles Include="Views\SearchUserGroupView\Region\SearchFriendView.axaml"/>
        <AdditionalFiles Include="Views\SearchUserGroupView\Region\SearchGroupView.axaml"/>
    </ItemGroup>
</Project>
