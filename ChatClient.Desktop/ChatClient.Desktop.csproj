            <SubType>Code</SubType>
        </Compile>
        <Compile Update="Views\ChatPages\ChatViews\ChatLeftPanelView.axaml.cs">
            <DependentUpon>ChatLeftPanelView.axaml</DependentUpon>
            <SubType>Code</SubType>
        </Compile>
        <Compile Update="Views\ChatPages\ChatViews\ChatView.axaml.cs">
